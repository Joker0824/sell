// 1像素边框
border-1px($color)
 position relative
 &::after
  position absolute
  display block
  content " "
  left 0
  bottom 0
  width 100%
  border-top 1px solid $color
  // 背景图片自适应
bg-img($url)
  background-image url($url+'@2x.png')
  @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio)
    background-image url($url+'@3x.png') no-repeat
  
 
   